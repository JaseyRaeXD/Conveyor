doctype 5
html

  head

    //- Site Metadata
    title Conveyor

    script.
      var start;

      start = function() {
        console.log("Starting Game");
        var el = document.getElementById('titlescreen')
        el.style.display = 'none';
        el = document.getElementById('totalscore');
        el.style.display = 'block';

        // Preload Every Art Asset
        $.get("assets/textures/brie-cheese-discolored.png", function() { return true; });
        $.get("assets/textures/playstation-9001.png", function() { return true; });
        $.get("assets/textures/brie-cheese-regular.png", function() { return true; });
        $.get("assets/textures/playstation-regular.png", function() { return true; });
        $.get("assets/textures/commodore-crunch-misprint.png", function() { return true; });
        $.get("assets/textures/playstation-straight.png", function() { return true; });
        $.get("assets/textures/commodore-crunch-regular.png", function() { return true; });
        $.get("assets/textures/smash-orange-soda-crushed.png", function() { return true; });
        $.get("assets/textures/conveyor-belt.png", function() { return true; });
        $.get("assets/textures/smash-orange-soda-regular.png", function() { return true; });
        $.get("assets/textures/conveyor-wheel.png", function() { return true; });
        $.get("assets/textures/swiss-cheese-moldy.png", function() { return true; });
        $.get("assets/textures/golden-do-rag-blue.png", function() { return true; });
        $.get("assets/textures/swiss-cheese-regular.png", function() { return true; });
        $.get("assets/textures/golden-do-rag-regular.png", function() { return true; });
        $.get("assets/textures/swiss-cheese-solid.png", function() { return true; });
        $.get("assets/textures/land-o-cakes-expired.png", function() { return true; });
        $.get("assets/textures/xbox-broken-logo.png", function() { return true; });
        $.get("assets/textures/land-o-cakes-regular.png", function() { return true; });
        $.get("assets/textures/xbox-broken-rrod.png", function() { return true; });
        $.get("assets/textures/pineapple-jacks-jacks.png", function() { return true; });
        $.get("assets/textures/xbox-regular.png", function() { return true; });
        $.get("assets/textures/pineapple-jacks-regular.png", function() { return true; });

        render();
      };


  body

    section#titlescreen
      section#wrapper
        button(onclick="start()")#play Click to Play!
    div#totalscore
    audio(src="assets/sounds/music.ogg" loop="loop" autoplay="autoplay")

    //- Required Libraries
    script(src="//coffeescript.org/extras/coffee-script.js")
    script(src="build/threejs/build/three.min.js")
    script(src="build/physijs/physi.js")

    //- Local Dependencies
    each file in ['config', 'scene', 'lighting', 'conveyor', 'items', 'controls', 'render']
      script(type="text/coffeescript" src="scripts/"+file+".coffee")
